<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<h1>Nowe dane profilowe:</h1>
			<%= form_for(@profile) do |f| %>
				
			  <% if @profile.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@profile.errors.count, "errors") %> prohibited this product from being saved:</h2>

			      <ul>
			      <% @profile.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			  <div class="form-group">
			    <%= f.label :name, "Imię:" %><br>
			    <div class="row">
          			<div class="col-sm-6">
          				<%= f.text_field :name, :autofocus => true, :class => "form-control" %>
					</div>
        		</div> 
			  </div>

			  <div class="form-group">
			    <%= f.label :surname , "Nazwisko" %><br>
			    <div class="row">
          			<div class="col-sm-6">
          				<%= f.text_field :surname, :class => "form-control" %>
					</div>
        		</div>
			  </div>

			  <div class="form-group">
			    <%= f.label :city , "Miasto" %><br>
			    <div class="row">
          			<div class="col-sm-6">
          				<%= f.text_field :city, :class => "form-control" %>
					</div>
        		</div>
			  </div>

			  <div class="form-group">
			    <%= f.label :street , "Ulica" %><br>
			    <div class="row">
          			<div class="col-sm-6">
          				<%= f.text_field :street, :class => "form-control" %>
					</div>
        		</div>
			  </div>

			  <div class="form-group">
			    <%= f.label :homeNumber , "Numer domu" %> &#160 &#160  &#160
			    <%= f.label :streetNumber , "Numer mieszkania" %><br>
			    <div class="row">
          			<div class="col-sm-3">
          				<%= f.number_field :homeNumber, :class => "form-control" %>
					</div>
					<div class="col-sm-3">
						<%= f.text_field :streetNumber, :class => "form-control" %>
					</div>
        		</div>
			  </div>

			  <div class="form-group">
			    
			    <div class="row">
          			<div class="col-sm-6">
          				
					</div>
        		</div>
			  </div>

			  <div class="form-group">
			    <%= f.label :dateOfBirth, "Data urodzenia" %><br>
			    <div class="row">
          			<div class="col-sm-6">
          				<%= f.date_select :dateOfBirth, :start_year => 1900, end_year: Date.today.year, :class => "form-control" %>
					</div>
        		</div>
			  </div>

			  <%= f.hidden_field :user_id, :value => current_user.id %>

			  <div class="actions">
			    <%= f.submit "Zatwierdź dane", :class => "btn btn-primary" %>
			  </div>

			<% end %>
		</div>
	</div>
</div> <!-- end container -->