<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h4><%= @product.name %></h4>
			<p>Aktualny kurs: <%= @product.exchanges.last.value.round(2) %></p>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<%= form_for @transaction, :url => { :controller => "transaction", :action => "create" } do |f| %>
            <div class="form-group">
              <%= f.label :quantity, "Ilość:" %>
              <div class="row">
                <div class="col-md-3">
                  <%= f.number_field :quantity, :min => 0, :autofocus => true, :class => "form-control" %>
                </div>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.hidden_field :product_id, :value => @product.id %>
                <div class="col-md-3">
                  <%= f.submit "Kup", :class => "btn btn-primary" %>
                </div>
              </div> 
            </div>
          <% end %>
		</div>
	</div>
</div>


